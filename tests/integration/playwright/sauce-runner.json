{
  "apiVersion": "v1alpha",
  "kind": "playwright",
  "defaults": {
    "mode": "sauce"
  },
  "sauce": {
    "region": "us-west-1",
    "concurrency": 10,
    "metadata": {
      "tags": [
        "e2e",
        "release team",
        "other tag"
      ]
    }
  },
  "docker": {
    "fileTransfer": "copy"
  },
  "playwright": {
    "version": "package.json",
    "configFile": "playwright.config.js"
  },
  "rootDir": "./",
  "suites": [
    {
      "name": "Firefox Win",
      "platformName": "Windows 11",
      "screenResolution": "1440x900",
      "testMatch": [
        ".*.js"
      ],
      "params": {
        "browserName": "firefox",
        "project": "firefox"
      }
    },
    {
      "name": "Chromium Mac",
      "platformName": "macOS 12",
      "screenResolution": "1440x900",
      "testMatch": [
        ".*.js"
      ],
      "params": {
        "browserName": "chromium",
        "project": "chromium"
      }
    },
    {
      "name": "Webkit Win",
      "platformName": "Windows 11",
      "screenResolution": "1440x900",
      "testMatch": [
        ".*.js"
      ],
      "params": {
        "browserName": "webkit",
        "project": "webkit"
      }
    }
  ]
}